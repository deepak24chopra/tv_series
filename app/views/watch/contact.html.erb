<% if flash[:notice] %>
<%= flash[:notice] %>
 <% end %>
<div class="container">
  <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="well well-sm">
        <fieldset>
            <legend class="text-center">Contact us For Suggestions or Advertising</legend>
    
<%= form_for(:contact, :url => {:action => 'contact_create'}, class: "form-horizontal") do |f| %>

  <div class="form-group">
              <label class="col-md-3 control-label" for="name">Name</label>
              <div class="col-md-9">
    <%= f.text_field :name, placeholder: "Your Name", class: "form-control" %>
  </div></div>&nbsp;
  <div class="form-group">
              <label class="col-md-3 control-label" for="email">Your E-mail</label>
              <div class="col-md-9">
    <%= f.text_field :email, placeholder: "Your Email", class: "form-control" %>
  </div></div>&nbsp;
  <div class="form-group">
              <label class="col-md-3 control-label" for="message">Your message</label>
              <div class="col-md-9">
    <%= f.text_area :content, rows: "5", placeholder: "Please Enter Your Message Here.", class: "form-control" %>
  </div></div>&nbsp;
  <div class="form-group">
              <div class="col-md-12 text-right">
    <%= f.submit 'Submit', class: "btn btn-primary" %>
  </div></div>
  </fieldset>
<% end %>
</div>
      </div>
  </div>
</div>
<br />
