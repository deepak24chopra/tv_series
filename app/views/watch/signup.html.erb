<div class="container" id="wrap">
	  <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <%= form_for(:user, :url => {:action => 'user_create'}, class: "form-horizontal") do |f| %>
                <% if flash[:notice] %>
                  <%= flash[:notice] %>
                <% end %>
  <legend>Sign Up</legend>
                    
                <%= f.text_field :username, class: 'form-control input-lg', placeholder: 'Username' %>
                            
                <%= f.text_field :email, class: 'form-control input-lg', placeholder: 'Email' %>

                <%= f.password_field :password, class: 'form-control input-lg', placeholder: 'Password' %>

                <%= f.password_field :password_confirmation, class: 'form-control input-lg', placeholder: 'Password' %>

                    <br />
                    <span class="help-block">By clicking Create my account, you agree to our Terms and that you have read our Data Use Policy, including our Cookie Use.</span>
                    
                        <%= f.submit "Sign Up", class: "btn btn-lg btn-primary btn-block signup-btn" %>
                        <% end %>
                </form>          
            </div>
        </div>            
    </div>
</div>