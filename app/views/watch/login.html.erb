<div class="container">
  <div class="row">

    <div class="main">
      <p id="notice"><%= notice %></p>
      <h3>Please Log In, or <%= link_to "Sign Up", :action => 'signup' %></h3>
      <%= form_tag(:action => 'user_login') do %>
        <div class="form-group">
          
          <%= label_tag 'username', nil, for: 'inputUsernameEmail' %>
          
          <%= text_field_tag 'username', nil, class: 'form-control' %>
        </div>
        <div class="form-group">
          <a class="pull-right" href="#">Forgot password?</a>
          <%= label_tag 'password', nil, for: 'inputPassword' %>
          <%= password_field_tag 'password', nil, class: 'form-control' %>
        </div>
        <div class="checkbox pull-right">
          <label>
            <input type="checkbox">
            Remember me </label>
        </div>
        <%= submit_tag("Log In", class: "btn btn btn-primary") %>
      <% end %>
    
    </div>
    
  </div>
</div>