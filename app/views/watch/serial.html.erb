            <div class="row">
            <div class=" col-md-5 ">
              <img src="<%= @serial.image_url %>", height = "300",  width = "400" class="thumbnail">       
            </div>
        
          <div class="col-md-7">
              <div class="page-header">
              <h3><%= @serial.name -%></h3>
              </div>
              <p>
              <%= @serial.content %>        
              </p>  
                <h3>Seasons</h3>
                <ul class="features">
                <% @serial.seasons.each do |season| -%>
                  <li><%= link_to "#{season.name} (Season #{season.season_number})", :action => 'season', :id => season.id %></li>
                
                    <p><ol>
                      <% season.episodes.visible.sorted.each do |epi| -%>
                      <li>
                      <%= link_to "#{epi.name}", :action => 'episode', :id => epi.id %>
                      </li>
                      <% end -%>
                      </ol>
                    </p>
                   <% end -%>                 
                        </ul>
                    </div>
                </div>